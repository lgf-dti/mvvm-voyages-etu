<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <!-- Titre -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="@string/kits_list_title"
        android:textSize="20sp" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <!-- Formulaire crÃ©ation de kit -->
    <EditText
        android:id="@+id/etDepart"
        android:hint="@string/hint_depart"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etDestination"
        android:hint="@string/hint_destination"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnAddKit"
        android:text="@string/btn_add_kit"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Liste des kits -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerKits"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:layout_marginTop="12dp"/>
</LinearLayout>
